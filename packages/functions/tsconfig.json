{
  "extends": "@tsconfig/node18/tsconfig.json",
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "Bundler",
    //"noUnusedLocals": true,
    //"noUnusedParameters": true,
    "strict": true,
    "verbatimModuleSyntax": true,
    "baseUrl": ".",
    "paths": {
      "@core/lib/*": [
        "../core/src/lib/*"
      ],
      "@core/types": [
        "../core/src/types"
      ],
      "@core/constants": [
        "../core/src/constants"
      ],
      "@core/events/*": [
        "../core/src/events/*"
      ],
      "@core/migrations": [
        "../core/src/migrations"
      ],
      "@core/db-seeds": [
        "../core/src/db-seeds"
      ]
    }
  }
}
