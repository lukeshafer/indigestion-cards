{
  "extends": "@tsconfig/node18/tsconfig.json",
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strict": true,
    "verbatimModuleSyntax": true,
    "baseUrl": ".",
    "paths": {
      "@lil-indigestion-cards/core/*": [
        "../core/src/*"
      ],
      "@lib/*": [
        "../core/src/lib/*"
      ]
    }
  }
}
