{
	"extends": "@tsconfig/node18/tsconfig.json",
	"compilerOptions": {
		"module": "esnext",
		"lib": ["es2023", "DOM"],
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"strict": true,
		"verbatimModuleSyntax": true,
		"jsx": "preserve",
		"jsxImportSource": "solid-js",
		"moduleResolution": "node",
	},
}
