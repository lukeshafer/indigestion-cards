---
import Page from '@admin/layouts/Page.astro';
import { getAllSeasons } from '@core/lib/season';
import { getAllCardDesigns } from '@core/lib/design';
import { PageTitle } from '@admin/components/text';
import PackTypeForm from '@admin/components/pack-type/PackTypeForm';

const seasons = await getAllSeasons();
const cardDesigns = await getAllCardDesigns();
---

<Page
	title="Create Pack Type"
  >
	<PageTitle>Create Pack Type</PageTitle>
	<PackTypeForm client:load {seasons} {cardDesigns} />
</Page>
