---
import Page from '@/layouts/Page.astro';
import { PageHeader, PageTitle, Anchor } from '@/components/text';
import UnmatchedImageList from '@/components/UnmatchedImageList.astro';
import { getAllRarities } from '@lib/rarity';
import { routes } from '@/constants';
import RarityTable from '@/components/rarities/RarityTable.astro';

const rarities = await getAllRarities();
---

<Page title="Rarities" class="flex flex-col gap-4">
	<UnmatchedImageList type="frame" />
	<PageHeader>
		<PageTitle>Rarities</PageTitle>
		<Anchor href={routes.ADMIN.CREATE.RARITY}>Add New Rarity</Anchor>
	</PageHeader>
	<div class="mx-auto max-w-2xl">
		<RarityTable {rarities} />
	</div>
</Page>
