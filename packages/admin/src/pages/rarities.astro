---
import Page from '@admin/layouts/Page.astro';
import { PageHeader, PageTitle, Anchor } from '@admin/components/text';
import UnmatchedImageList from '@admin/components/UnmatchedImageList.astro';
import { getAllRarities } from '@core/lib/rarity';
import { routes } from '@admin/constants';
import RarityTable from '@admin/components/rarities/RarityTable.astro';

const rarities = await getAllRarities();
---

<Page title="Rarities" class="flex flex-col gap-4">
	<UnmatchedImageList type="frame" />
	<PageHeader>
		<PageTitle>Rarities</PageTitle>
		<Anchor href={routes.ADMIN.CREATE.RARITY}>Add New Rarity</Anchor>
	</PageHeader>
	<div class="mx-auto">
		<RarityTable {rarities} />
	</div>
</Page>
