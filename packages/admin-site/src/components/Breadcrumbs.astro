---
export interface Path {
	label: string
	href: string
}

interface Props {
	path: Path[]
}
---

<section class="flex gap-2 p-4">
	{
		Astro.props.path.map(({ label, href }, index) =>
			index < Astro.props.path.length - 1 ? (
				<>
					<a class="underline font-heading" href={href}>
						{label}
					</a>
					<p class="block font-heading">/</p>
				</>
			) : (
				<p class="block font-heading font-bold">{label}</p>
			)
		)
	}
</section>
