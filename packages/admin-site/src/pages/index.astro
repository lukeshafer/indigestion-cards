---
import Page from '@/layouts/Page.astro'
import { useUser } from '@/session'

const user = useUser(Astro.cookies)

console.log(user)
---

<Page title="index" session={user}>
	{
		user ? (
			<a href="/auth/logout" rel="noreferrer">
				Logout
			</a>
		) : (
			<a href="/auth/login" rel="noreferrer">
				Login
			</a>
		)
	}
</Page>
