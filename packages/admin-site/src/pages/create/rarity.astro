---
import { createPresignedPost } from '@aws-sdk/s3-presigned-post'
import Page from '@/layouts/Page.astro'
import H1 from '@/components/H1.astro'
import Form from '@/components/form/Form.astro'
import { S3Client } from '@aws-sdk/client-s3'
import { Bucket } from 'sst/node/bucket'
import crypto from 'crypto'
import { useUser } from '@/session'

const user = useUser(Astro.cookies)
if (!user) return Astro.redirect('/')

const s3 = new S3Client({ region: 'us-east-2' })
const presigned = await createPresignedPost(s3, {
	Bucket: Bucket.FrameDesigns.bucketName,
	Key: crypto.randomBytes(20).toString('hex') + '.png',
	Fields: {
		acl: 'public-read',
		success_action_redirect: Astro.url.origin + '/create/rarity-details',
		'x-amz-meta-test': 'test',
	},
})
---

<Page title="Create new rarity" class="grid gap-4 justify-center" session={user}>
	<H1>Create new rarity</H1>
	<Form class="w-max" method="post" action={presigned.url} enctype="multipart/form-data">
		{
			Object.entries(presigned.fields).map(([key, value]) => (
				<input type="hidden" name={key} value={value} />
			))
		}
		<label for="file">Rarity Frame</label>
		<input class="p-4 text-center" type="file" name="file" id="file" accept="image/png" />
		<button class="bg-white p-4 mt-4 font-bold" type="submit">Upload</button>
	</Form>
</Page>
