---
import '../global.css';
import '@fontsource/montserrat/variable.css';
import 'open-props/colors';

interface Props {
	title: string;
	pageType?: 'public' | 'private';
}

export type BaseProps = Props;

const { title, pageType = 'private' } = Astro.props;

const session = Astro.locals.session;
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/png" href="/favicon.png" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<meta name="theme-color" content="#fd94e6" />
		<script src="../elements/my-form.ts"></script>
		<script src="../elements/form-indicator.ts"></script>
		<title>{title}</title>
	</head>
	<body hx-ext="head-support, preload" hx-boost="false">
		{
			session?.type === 'admin' || pageType === 'public' ? (
				<slot />
			) : (
				<script> window.location.href = '/' </script>
			)
		}
	</body>
	<script>
		import htmx from 'htmx.org';
		window.htmx = htmx;
		import('htmx.org/dist/ext/head-support');
		import('htmx.org/dist/ext/preload');

		import Alpine from 'alpinejs';
		// import persist from '@alpinejs/persist';

		window.Alpine = Alpine;
		// window.Alpine.plugin(persist);
		Alpine.start();
	</script>
</html>
