---
import '../global.css';
import '@fontsource/montserrat/variable.css';
import 'open-props/colors';

interface Props {
	title: string;
	pageType?: 'public' | 'private';
}

export type BaseProps = Props;

const { title, pageType = 'private' } = Astro.props;

const session = Astro.locals.session;
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/png" href="/favicon.png" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<meta name="theme-color" content="#ffffff" />
		<script src="../elements/my-form.ts"></script>
		<script src="../elements/form-indicator.ts"></script>
		<title>{title}</title>
	</head>
	<body hx-ext="head-support, preload" hx-boost="true">
		{
			session?.type === 'admin' || pageType === 'public' ? (
				<slot />
			) : (
				<script> window.location.href = '/' </script>
			)
		}
	</body>
	<script>
		import htmx from 'htmx.org';
		window.htmx = htmx;
		import('htmx.org/dist/ext/head-support');
		import('htmx.org/dist/ext/preload');

		import Alpine from 'alpinejs';
		import tiltCard from '@/components/cards/TiltCard';
		import refreshTwitchEventsButton from '@/components/site-config/RefreshTwitchEventsButton';

		Alpine.data('tiltCard', tiltCard);
		Alpine.data('refreshTwitchEventsButton', refreshTwitchEventsButton);
		window.Alpine = Alpine;

		Alpine.start();

		function deleteParam(paramName) {
			const url = new URL(window.location.href);
			url.searchParams.delete(paramName);
			window.history.replaceState({}, '', url);
		}
		window.deleteParam = deleteParam;
	</script>
</html>
