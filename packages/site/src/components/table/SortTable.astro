---
interface Props {
	compact?: boolean;
	id?: string;
}

const { compact, id, ...rest } = Astro.props;
---

<sort-table class="block" class:list={{ groupcompact: compact }} {...rest}>
	<table class="w-full table-fixed text-center" {id}>
		<slot name="heading" />
		<tbody>
			<slot />
		</tbody>
	</table>
</sort-table>
