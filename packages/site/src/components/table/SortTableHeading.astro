---
interface Props {
	sort?: boolean;
	width?: string;
	type?: 'text' | 'number' | 'date';
	class?: string;
	showOnBreakpoint?: 'sm' | 'md' | 'lg' | 'xl';
	startDescending?: boolean;
	align?: 'left' | 'center' | 'right';
}

const {
	sort = true,
	width = 'auto',
	type = 'text',
	showOnBreakpoint,
	startDescending = false,
	align = 'center',
} = Astro.props;
---

<th
	data-type={type}
	data-start-descending={startDescending}
	class:list={{
		'cursor-pointer': sort,
		hidden: showOnBreakpoint !== undefined,
		'sm:table-cell': showOnBreakpoint === 'sm',
		'md:table-cell': showOnBreakpoint === 'md',
		'lg:table-cell': showOnBreakpoint === 'lg',
		'xl:table-cell': showOnBreakpoint === 'xl',
		'text-left': align === 'left',
		'text-center': align === 'center',
		'text-right': align === 'right',
		'px-6 py-2 data-[mode=ascending]:after:content-["▲"] data-[mode=descending]:after:content-["▼"]': true,
	}}
	style={{ width }}>
	<slot />
</th>
