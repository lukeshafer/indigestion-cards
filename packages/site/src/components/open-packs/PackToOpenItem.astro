---
import { api } from '@/constants';

interface Props {
	packId: string;
	username: string;
}

const { packId, username } = Astro.props;
---

<li id={packId} x-data={JSON.stringify({ packId })}>
	<button
		class="font-display -mx-2 w-full p-2 text-left text-2xl italic text-gray-600 hover:bg-gray-300 hover:text-gray-800"
		:class={`{ 'bg-gray-300 text-gray-800': activePackId === packId }`}
		@click={`activePackId = packId`}
		hx-get={api.GET_PACK_TO_OPEN}
		hx-vals={JSON.stringify({ packId })}
		hx-swap="innerHTML"
		hx-target="#open-showcase">
		{username}
	</button>
</li>
