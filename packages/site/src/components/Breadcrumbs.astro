---
export interface Path {
	label: string;
	href?: string | undefined;
}

interface Props {
	path: Path[];
}

const { path } = Astro.props;
---

<section class="flex gap-2 p-4 text-sm font-medium text-gray-700 underline-offset-4">
	{
		path.map(({ label, href }, index) =>
			index === Astro.props.path.length - 1 ? (
				<p class="font-heading text-brand-main block font-bold">{label}</p>
			) : href ? (
				<>
					<a rel="prefetch" class="font-heading underline" href={href}>
						{label}
					</a>
					<p class="font-heading block">/</p>
				</>
			) : (
				<>
					<p class="font-heading block">{label}</p>
					<p class="font-heading block">/</p>
				</>
			)
		)
	}
</section>
