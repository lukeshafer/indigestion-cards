---
import { Icon } from 'astro-icon';
---

<footer
	class="grid justify-center gap-1 border-t border-t-gray-300 bg-white py-6 text-center text-sm dark:border-t-gray-800 dark:bg-gray-950">
	<nav class="flex items-center gap-8">
		<a
			href="https://twitch.tv/lil_indigestion"
			target="_blank"
			class="hover:brightness-90"
			title="Twitch">
			<Icon name="mdi:twitch" class="text-brand-main w-11" />
			<span class="sr-only">Twitch</span>
		</a>
		<a
			href="https://www.youtube.com/@lilindigestion"
			target="_blank"
			class="hover:brightness-90"
			title="YouTube">
			<Icon name="mdi:youtube" class="text-brand-main w-12" />
			<span class="sr-only">YouTube</span>
		</a>
		<a
			href="https://www.patreon.com/lil_indigestion"
			target="_blank"
			class="hover:brightness-90"
			title="Patreon">
			<Icon name="mdi:patreon" class="text-brand-main w-10" />
			<span class="sr-only">Patreon</span>
		</a>
	</nav>
	<p>&copy; {new Date().getFullYear()} lil_indigestion</p>
</footer>
