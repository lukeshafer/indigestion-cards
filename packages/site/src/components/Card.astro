---
import TiltCardEffect from './cards/TiltCardEffect';

export type CardProps = Props;
interface Props {
	rarityName: string;
	frameUrl: string;
	imgUrl: string;
	cardName: string;
	cardDescription: string;
	designId: string;
	cardNumber: number;
	totalOfType: number;
}

const { frameUrl, imgUrl, cardName, cardDescription } = Astro.props;
---

<TiltCardEffect
	client:load
	shiny={true}>
	<article class="card-wrapper" style={{ 'background-image': `url(${frameUrl})` }}>
		<img src={imgUrl} alt={cardName} class="design-img" />
		<h3 class="card-name">{cardName}</h3>
		<p class="card-description">{cardDescription}</p>
	</article>
</TiltCardEffect>

<style>
	.card-wrapper {
		position: relative;
		background-size: cover;
		width: 300px;
		aspect-ratio: 77 / 107;
	}

	.design-img {
		position: absolute;
		--left: 9%;
		left: var(--left);
		width: calc(100% - var(--left) * 2);
		object-fit: cover;

		top: 15%;
		height: 51%;
	}

	.card-name {
		position: absolute;
		--left: 9%;
		left: var(--left);
		--top: 67%;
		top: var(--top);
		width: calc(100% - var(--left) * 2);
		font-size: 1.5rem;
		font-weight: 700;
		color: #fff;
	}

	.card-description {
		position: absolute;
		--left: 9%;
		left: var(--left);
		--top: 75%;
		top: var(--top);
		width: calc(100% - var(--left) * 2);
		height: 15%;
		padding: 0.5rem;
		font-size: 1rem;
		font-weight: 400;
		color: #fff;
		background-color: rgba(0, 0, 0, 0.5);
	}
</style>
