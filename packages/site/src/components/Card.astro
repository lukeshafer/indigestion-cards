---
import TiltCardEffect from './cards/TiltCardEffect';

export type CardProps = Props;
interface Props {
	rarityName: string;
	frameUrl: string;
	imgUrl: string;
	cardName: string;
	cardDescription: string;
	designId: string;
	cardNumber: number;
	totalOfType: number;
	scale?: number;
	instanceId?: string;
	preview?: boolean;
}

const {
	frameUrl,
	imgUrl,
	cardName,
	cardDescription,
	cardNumber,
	totalOfType,
	scale = 1,
	preview = false,
} = Astro.props;
---

<TiltCardEffect client:load shiny={true}>
	<article
		class="card-wrapper card-aspect-ratio relative w-72 bg-cover text-left"
		style={{ 'background-image': `url(${frameUrl})`, scale }}>
		<img
			src={imgUrl}
			alt={cardName}
			class="design-img absolute left-[9%] top-[15%] h-[51%] w-[82%] object-cover"
		/>
		<h3
			style={{
				'--left': '12%',
				'--top': '4.4%',
				width: 'calc(100% - var(--left) * 2)',
				left: 'var(--left)',
				top: 'var(--top)',
			}}
			x-text={preview ? 'preview_cardName' : undefined}
			class="font-display absolute text-lg font-bold italic text-slate-900">
			{cardName}
		</h3>
		<p
			style={{
				'--left': '11%',
				top: '68.5%',
				height: '15%',
				width: 'calc(100% - var(--left) * 2)',
				left: 'var(--left)',
			}}
			x-text={preview ? 'preview_cardDescription' : undefined}
			class="card-description absolute p-2 font-sans text-sm font-normal text-black">
			{cardDescription}
		</p>
		<p class="font-display absolute bottom-2 right-4 text-xs font-bold italic text-white">
			{cardNumber} / {totalOfType}
		</p>
	</article>
</TiltCardEffect>
