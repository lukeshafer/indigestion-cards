---
import { PageHeader, PageTitle } from '@site/components/text';
import { StatisticsPage } from '@site/layouts/StatisticsPage';
import { getAllSeasons } from '@core/lib/season';
import Page from '@site/layouts/Page.astro';

const seasons = await getAllSeasons();
---

<Page title="Statistics" breadcrumbs={[{ label: 'Statistics' }]} pageType="public">
	<PageHeader>
		<PageTitle>Statistics</PageTitle>
	</PageHeader>
	<StatisticsPage seasons={seasons} client:only="solid-js" />
</Page>
