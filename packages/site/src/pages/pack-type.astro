---
import Page from '@/layouts/Page.astro';
import { getAllPackTypes } from '@lil-indigestion-cards/core/card';
import { routeNames, routes } from '@/constants';

import { PageHeader, PageTitle, Anchor } from '@/components/text';

import PackTypeTable from '@/components/pack-type/PackTypeTable';

const packTypes = await getAllPackTypes();
---

<Page title="Pack Types" breadcrumbs={[{ label: routeNames.PACK_TYPES }]}>
	<PageHeader>
		<PageTitle>Pack Types</PageTitle>
		<Anchor href={routes.ADMIN.CREATE.PACK_TYPE}>Create New Pack Type</Anchor>
	</PageHeader>
	<div class="mx-auto max-w-2xl">
		<PackTypeTable {packTypes} client:load />
	</div>
</Page>
