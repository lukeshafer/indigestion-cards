---
import Page from '@/layouts/Page.astro';
import Form from '@/components/form/Form.astro';
import InputBase from '@/components/form/InputBase.astro';
import { api, routes } from '@/constants';
---

<Page
	title="Create New Season"
	breadcrumbs={[
		{ label: 'Home', href: '/' },
		{ label: 'Seasons', href: routes.SEASONS },
		{ label: 'New Season' },
	]}>
	<h1 class="page-heading">Create New Season</h1>

	<Form action={`${api.CREATE_CARD_SEASON}?redirect=${routes.ADMIN.CREATE.SEASON}`}>
		<InputBase label="Season Name" id="name">
			<input id="name" name="name" type="text" class="form-input" />
		</InputBase>
		<InputBase label="Season ID" id="seasonId">
			<input
				id="seasonId"
				name="seasonId"
				type="text"
				data-id-from="name"
				data-edit-button
				readonly
				class="form-input"
				pattern="[a-z0-9-]+"
			/>
		</InputBase>
		<InputBase label="Description" id="description">
			<input type="text" id="description" name="description" class="form-input" />
		</InputBase>
		<button class="form-button" type="submit">Create</button>
	</Form>
</Page>

<script></script>
