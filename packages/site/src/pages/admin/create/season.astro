---
import Page from '@/layouts/Page.astro';
import { api, routes } from '@/constants';
---

<Page
	title="Create New Season"
	breadcrumbs={[
		{ label: 'Home', href: '/' },
		{ label: 'Seasons', href: routes.SEASONS },
		{ label: 'New Season' },
	]}>
	<h1 class="page-heading">Create New Season</h1>

	<my-form>
		<form action={`${api.SEASON.CREATE}`} hx-swap="none" method="post">
			<div class="input-group">
				<label for="seasonName">Season Name</label>
				<input id="seasonName" name="seasonName" type="text" />
			</div>
			<div class="input-group">
				<label for="seasonId">Season ID</label>
				<input
					id="seasonId"
					name="seasonId"
					type="text"
					data-id-from="seasonName"
					data-edit-button
					readonly
					pattern="[a-z0-9-]+"
				/>
			</div>
			<div class="input-group">
				<label for="seasonDescription">Description</label>
				<input type="text" id="seasonDescription" name="seasonDescription" />
			</div>
			<button type="submit">Create</button>
		</form>
	</my-form>
</Page>

