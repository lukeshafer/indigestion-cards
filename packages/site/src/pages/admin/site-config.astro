---
import SortTable from '@/components/SortTable.astro'
import Page from '@/layouts/Page.astro'
import { useAdmin } from '@/session'

const user = useAdmin(Astro.cookies)
if (!user) {
	return Astro.redirect('/404')
}

/*const rewards = await getAllChannelPointRewards({ })*/
---

<Page
	session={user}
	breadcrumbs={[{ label: 'Home', href: '/' }, { label: 'Config' }]}
	title="Site Config">
	<h1 class="page-heading">Site Config</h1>
	<section>
		<h2 class="sub-heading">Twitch Channel Point Rewards</h2>
		<SortTable class="mt-4">
			<thead>
				<tr>
					<th class="w-2/5">Event</th>
					<th>Enabled</th>
					<th class="w-2/5">Pack Type</th>
				</tr>
			</thead>
		</SortTable>
	</section>
</Page>
