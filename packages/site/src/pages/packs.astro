---
import SortTable from '@/components/table/SortTable.astro';
import SortTableHead from '@/components/table/SortTableHead.astro';
import SortTableHeading from '@/components/table/SortTableHeading.astro';
import PackRow from '@/components/pack/PackRow.astro';
import Page from '@/layouts/Page.astro';
import { getAllPacks } from '@lil-indigestion-cards/core/card';
import PageHeading from '@/components/text/PageHeading.astro';
import { routeNames } from '@/constants';

const packs = await getAllPacks();
---

<Page title="All Packs" breadcrumbs={[{ label: routeNames.PACKS }]}>
	<header class="page-header">
		<PageHeading>All Packs</PageHeading>
	</header>
	<div x-data="{}">
		<SortTable>
			<SortTableHead slot="heading">
				<SortTableHeading width="50%">Owner</SortTableHeading>
				<SortTableHeading>Pack Type</SortTableHeading>
				<SortTableHeading />
			</SortTableHead>
			{packs.map((pack) => <PackRow pack={pack} />)}
		</SortTable>
	</div>
</Page>
