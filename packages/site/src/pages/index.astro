---
import { Api } from 'sst/node/api';
import Page from '@/layouts/Page.astro';

Astro.cookies.set('lilind_code', 'pants', {
	path: '/',
	httpOnly: true,
	maxAge: 60 * 60 * 24 * 30,
	sameSite: 'lax',
});
---

<Page title="index" breadcrumbs={[{ label: 'Home', href: '/' }]} pageType="public">
	<a href="/user" class="button-link">Users</a>

	<button hx-get={`${Api.api.url}/test-credentials`} hx-swap="innerHTML" class="post-button" data-type="submit">
		Click me
	</button>
</Page>
