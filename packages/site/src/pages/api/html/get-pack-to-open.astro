---
import { getPackById } from '@lil-indigestion-cards/core/card';
import PackShowcase from '@/components/open-packs/PackShowcase.astro';

const packId = Astro.url.searchParams.get('packId');
if (!packId) {
	return new Response('PackId Required', { status: 400 });
}

const pack = await getPackById({ packId });

if (!pack) {
	return new Response('Pack not found', { status: 404 });
}
---

<body>
	<PackShowcase pack={pack} />
</body>
