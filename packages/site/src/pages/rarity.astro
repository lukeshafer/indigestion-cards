---
import Page from '@/layouts/Page.astro';
import { PageHeader, PageTitle, Anchor } from '@/components/text';
import UnmatchedImageList from '@/components/UnmatchedImageList.astro';
import { getAllRarities } from '@lil-indigestion-cards/core/card';
import { routes, routeNames } from '@/constants';
import RarityTable from '@/components/rarities/RarityTable';

const rarities = await getAllRarities();
---

<Page title="Rarities" class="flex flex-col gap-4" breadcrumbs={[{ label: routeNames.RARITIES }]}>
	<UnmatchedImageList type="frame" />
	<PageHeader>
		<PageTitle>Rarities</PageTitle>
		<Anchor href={routes.ADMIN.CREATE.RARITY}>Add New Rarity</Anchor>
	</PageHeader>
	<div class="mx-auto max-w-2xl">
		<RarityTable {rarities} client:load />
	</div>
</Page>
