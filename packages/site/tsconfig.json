{
  "extends": "astro/tsconfigs/strict",
  "exclude": [
    "dist"
  ],
  "compilerOptions": {
    "experimentalDecorators": true,
    "target": "ES2020",
    "allowJs": true,
    "baseUrl": ".",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "paths": {
      "@site/*": [
        "src/*"
      ],
      "@core/lib/*": [
        "../core/src/lib/*"
      ]
			"@core/types": [
        "../core/src/db.types"
      ]
    },
    "jsx": "preserve",
    "jsxImportSource": "solid-js"
  }
}
